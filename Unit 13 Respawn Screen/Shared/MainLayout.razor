@inherits LayoutComponentBase
@namespace Unit_13_Respawn_Screen.AdminScreen.Components

<PageTitle>Unit 13 Respawn Screen</PageTitle>

<div class="page">
    <div class="sidebar">
        <LayoutExplorer />
    </div>

    <main class="content">
         @Body
    </main>
</div>



<div style=@DialogStyle class="dialog-window">
  <div class="dialog-window-content">
    <p>Please choose a layout to load...</p>
  </div>
</div>

@code{
    private string DialogStyle = "display: block;";
    
    private void ShowDialog()
    {
        DialogStyle = "display: block;";
    }
    private void HideDialog()
    {
        DialogStyle = "display: none;";
    }
}